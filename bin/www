#!/usr/bin/env node
var debug = require('debug')('caspr');
var app = require('../app');
var https = require('https');
var http = require('http');
var fs = require('fs');

app.set('port', process.env.PORT || 3000);
app.set('ssl', process.env.SSL || false);
app.set('ssl_port', process.env.SSL_PORT || 443);

if (app.get('ssl')) {
  var options = {
    key: fs.readFileSync('./bin/certs/key.pem'),
    cert: fs.readFileSync('./bin/certs/cert.pem'),
  };

  var server = https.createServer(options, app).listen(app.get('ssl_port'), function() {
    console.log("SSL Server listening on port " + app.get('ssl_port'));
  });  
}

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});